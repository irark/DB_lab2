@model IEnumerable<DB_lab2.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Категорії</h1>

    <p>
        <a asp-action="Create">Додати категорію</a>
    </p>

<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати |</a> <br />
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити |</a><br />
                    
                    @Html.ActionLink("Перелік ", "Index", "Films", new { firstId = item.Id, retController = "Categories" })

                </td>
            </tr>
        }
    </tbody>
</table>
